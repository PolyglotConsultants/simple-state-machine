{
  "name": "@state-management/simple-state-machine",
  "version": "1.0.9",
  "description": "A simple state management library using StateKey and Command Pattern for Angular, React, and React Native.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "test": "jest"
  },
  "dependencies": {
    "rxjs": "^7.3.0"
  },
  "devDependencies": {
    "@babel/parser": "^7.25.9",
    "@babel/types": "^7.25.9",
    "@types/jest": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^7.32.0",
    "jest": "^27.0.0",
    "ts-jest": "^27.0.0",
    "typescript": "^4.5.4"
  },
  "keywords": [
    "state-management",
    "command-pattern",
    "typescript",
    "rxjs",
    "angular",
    "react",
    "react-native"
  ],
  "author": "Gopakumar Nair",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/state-management/simple-state-machine.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
